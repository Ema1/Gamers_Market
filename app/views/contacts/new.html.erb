<div class="row">
  <div class="span6 offset3">
	<h1> Contact Us </h1>
    <%= form_for @contact, :html => {:multipart => true} do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
  
	  <%= f.label :name %>
      <%= f.text_field :name %>
	  
      <%= f.label :email %>
      <%= f.text_field :email %>
	<br>
	  <%= f.text_area :message, placeholder: "Feedback?" %>
	<br>
      <%= f.submit "Send Message", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>