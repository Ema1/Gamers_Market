
<% provide(:title, @user.username) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Posts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
	<% if @user.gameposts.any? %>
      <h3>Games (<%= @user.gameposts.count %>)</h3>
      <ol class="gameposts">
        <%= render @gameposts %>
      </ol>
      <%= will_paginate @gameposts %>
    <% end %>
  </div>
</div>